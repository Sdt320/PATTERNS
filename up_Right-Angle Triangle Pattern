#include <stdio.h>

int main()
{
    int i,j,n,k;
    printf("Enter number ;  ");
    scanf("%d",&n);
    for(i=0;i<n;i++){
        for(j=0;j<=i;j++){
            if(j==i){
                for(k=j+1;k<=n;k++){
                printf("*  ");
            }
            }
            else{
            printf("   ");
        }
        }
        printf("\n");
    }
    printf(" Pattern");

    return 0;
}
