#include <stdio.h>

int main()
{
    int i,j,n,k;
    printf("Enter number ;  ");
    scanf("%d",&n);
    for(i=1;i<=n;i++){
        for(j=0;j<n-i;j++){
           printf(" ");
           }
           
        for(k=j+1;k<=n;k++){
                printf("*");
            
            }
            
         printf("\n");
        }
       
    
    printf(" Pattern");

    return 0;
}
