#include <stdio.h>

int main()
{
    int i,j,k,n;
    printf("enter number= ");
    scanf("%d",&n);
    for(i=0;i<n-1;i++){
        printf("\n");
        for(j=0;j<i;j++){
            printf(" ");
            
        }
        for(k=j+1;k<=n;k++){
            printf("*");
        }
        
    }printf("\n");
    for(i=1;i<=n;i++){
        for(j=1;j<=n-i;j++){
            printf(" ");
        }
        for(k=j+1;k<=n+1;k++){
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
